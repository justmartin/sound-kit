<!DOCTYPE html>
<html>
  <head>
    <title>SoundKit</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="png" href="assets/headphone-symbol.png">

  </head>

  <body>

  	<%= render "layouts/navbar" %>

    <div class="page-background"></div>

    <%= yield %>

    <audio id="clap" data-key-code="49" src="sounds/clap.wav"></audio>
		<audio id="kick" data-key-code="50" src="sounds/kick.wav"></audio>
		<audio id="snare" data-key-code="51" src="sounds/snare.wav"></audio>
		<audio id="kick-2" data-key-code="52" src="sounds/kick_2.wav"></audio>
		<audio id="kick-3" data-key-code="53" src="sounds/kick_3.wav"></audio>
		<audio id="bass" data-key-code="54" src="sounds/bass.wav"></audio>
		<audio id="clap-2" data-key-code="55" src="sounds/clap_2.wav"></audio>
		<audio id="hit" data-key-code="56" src="sounds/hit.wav"></audio>
		<audio id="snap" data-key-code="57" src="sounds/snap.wav"></audio>
		<audio id="ohyeah" data-key-code="48" src="sounds/ohyeah.mp3"></audio>
  </body>
</html>
